#!/bin/bash

if [[ -z "$HOMEBREW" ]]; then
    # echo "*** ERROR: HOMEBREW is not set. Aborting."
    true
else
    HIDEBREW_OLD_PATH="$PATH"
    candidate_paths="$HOMEBREW/bin $HOMEBREW/sbin $HOMEBREW/.*/gnubin $HOMEBREW/.*/libexec/gnubin"
    for _brew_bin_path in $candidate_paths; do
        export PATH="$(echo $PATH | sed -E "s@:$_brew_bin_path:?@:@g;s@::@:@g")"
    done
    unset _brew_bin_path
fi
