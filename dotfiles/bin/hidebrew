#!/bin/bash

if [[ -z "$HOMEBREW" ]]; then
    echo "*** ERROR: HOMEBREW is not set. Aborting."
else
    candidate_paths="$HOMEBREW/bin $HOMEBREW/sbin $HOMEBREW/.*/gnubin"
    for _brew_bin_path in $candidate_paths; do
        export PATH="$(echo $PATH | sed -E "s@:$_brew_bin_path:?@@g")"
    done
    unset _brew_bin_path
fi
